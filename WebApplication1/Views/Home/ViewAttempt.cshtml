    var attempt = ViewBag.Attempt as DataLayer.TestAttempt;
    var userAnswers = ViewBag.UserAnswers as Dictionary<string, string>;
    var correctAnswers = new Dictionary<string, string>
    {
        { "q1", "2x" },
        { "q2", "cos(x)" },
        { "q3", "e^x" },
